@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Add Application Role";
}

<h2>
    <i class="fa fa-user"></i> @ViewBag.Title.
</h2>
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("Create", "Role", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "AddRoleForm", @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a application role.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Role Name", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBox("Name", "", new { @class = "form-control" })
                        @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Save" />
                        @Html.ActionLink("Cancel", "Index", "Role", new { @class = "btn btn-primary " })
                    </div>
                </div>


            }
        </section>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $("#AddRoleForm").submit(function (event) {
            var role = $("#Name").val();
            if (!role) {
                //alert("Please enter role name.");
                event.preventDefault();
                toastr.error("Please enter role name.");
            }
        });
    </script>
}
